<import src="../template/tips/index.wxml" />

<view class="wrapper">
  <template is="tips" data="{{txt: '请在录入以下信息后，点击“保存”按钮'}}"/>

    <van-cell-group>
      <van-field
        value="{{ carNum }}"
        required
        clearable
        label="车牌号"
        placeholder="请输入车牌号"
        bind:click-icon="onInputCarNum"
      />

      <van-field
        value="{{ tel }}"
        label="手机号"
        placeholder="请输入手机号"
        required
      />

      <van-field
        value="{{ idCard }}"
        label="身份证号"
        placeholder="请输入身份证号"
        required
      />

      <van-cell title="行程码截图" required title-width="100px"
        title-class="label" value-class="upload">
        <van-uploader file-list="{{ travelCodeImgs }}" bind:after-read="afterRead" />
      </van-cell>

      <van-cell title="健康码截图" required border="{{ false }}" title-width="100px"
        title-class="label" value-class="upload">
        <van-uploader file-list="{{ travelCodeImgs }}" bind:after-read="afterRead" />
    </van-cell>
    </van-cell-group>


  <view class="btn submit" bindtap="onsubmit">保存</view>
</view>
