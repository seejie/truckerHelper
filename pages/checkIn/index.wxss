.wrapper{
  display: flex;
  flex-direction: column;
  padding-bottom: 40rpx;
}

.title, .pannel{
  padding: 0 30rpx;
  box-sizing: border-box;
}

.title{
  font-size: 28rpx;
  color: #888;
  margin: 25rpx 0;
  width: 100%;
}

.pannel{
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #E5E5E5;
  border-bottom: 1rpx solid #E5E5E5;
}

.carNum{
  display: flex;
  padding: 11rpx 30rpx;
  justify-content: space-between;
  margin-bottom: 30rpx;
  align-items: center;
}

.input-group{
  display: flex;
  position: relative;
}

.box.first{
  border-right: 0;
}
.line {
  position: absolute;
  width: 1rpx;
  height: 80%;
  left: 50%;
  top: 10%;
  background-color: #bfbfbf;
}

.box.last{
  border-left: 0;
}

.box{
  width: 76rpx;
  height: 66rpx;
  border: 1rpx solid #bfbfbf;
  text-align: center;
}

view.box{
  background-color: #D5EFD3;
  border: 1px dashed #bfbfbf;
  color: #666;
  font-size: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

view.dot{
  background-color: #BFBFBF;
  height: 8rpx;
  width: 8rpx;
  border-radius: 4rpx;
  margin: 0 2rpx;
}

.row{
  padding: 28rpx 0;
  display: flex;
}

.row + .row{
  border-top: 1rpx solid #eee;
}

.label {
  color: #000;
  font-size: 34rpx;
  width: 200rpx;
}

.input{
  width: calc(100% - 200rpx);
  padding: 24rpx 0;
  margin: -24rpx;
}
  
.tips{
  justify-content: start;
  padding: 38rpx 30rpx;
}

.view{
  padding: 30rpx;
  display: flex;
}

.uploader{
  width: 116rpx;
  height: 116rpx;
}

.uploader .van-uploader__upload{
  margin: 0;
  width: 116rpx !important;
  height: 116rpx !important;
}

.submit{
  margin: 0 auto;
}
