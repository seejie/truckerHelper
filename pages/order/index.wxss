.wrapper{
  display: flex;
  flex-direction: column;
}

.pageController{
  flex: 1;
}

.page{
  display: none;
}

.page.selected{
  display: block;
}

.info{
  background-color: #fff;
  margin-bottom: 30rpx;
}

.cell {
  font-size: 34rpx;
  padding: 28rpx 0;
  margin-left: 30rpx;
}

.cell + .cell{
  border-top: 1px solid #f5f5f5;
}

/* 叫号 */
.queue .tips{
  width: 90vw;
  margin: 0 auto;
}

.queue-number{
  color: red;
  font-weight: 700;
  font-size: 90px;
  text-align: center;
  padding: 10vh;
}

.order-number{
  color: #333;
  display: block;
}
